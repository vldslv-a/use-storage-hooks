{
  "compilerOptions":{
    "outDir": "./dist",
    "baseUrl": "./",
    "target":"ESNext",
    "module":"ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop":true,
    "forceConsistentCasingInFileNames":true,
    "strict":true,
    "skipLibCheck":true,
    "noEmit":true,
    "noFallthroughCasesInSwitch":true,
    "noUncheckedIndexedAccess":true,
    "noUnusedLocals":true,
    "noUnusedParameters":true,
    "sourceMap":true,
    "types":[
      "node",
      "jest"
    ],
    "paths":{
      "*":["./src/*", "*"]
    },
    "typeRoots": ["./dist/index.d.ts", "node_modules/@types"]
  },
  "exclude":[
    "**/node_modules/*",
    "node_modules"
  ],
  "include":[
    "./*.ts",
    "./*.mts",
    "eslint.config.mjs",
    ".prettierrc.mjs",
    "src"
  ]
}